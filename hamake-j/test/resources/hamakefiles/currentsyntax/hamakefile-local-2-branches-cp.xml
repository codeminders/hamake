<project name="local-cp">

	<!-- properties:
			tmpdir, cp, ls 
			are set by unit test
	-->

	<foreach name="map11">
		<input>
			<fileset path="${tmpdir}/input" />
		</input>
		<output>
			<file id="map11Out" path="${tmpdir}/map11/${foreach:filename}" />
		</output>
		<exec binary="${cp}">
			<parameter>
				<literal value="${foreach:path}" />
			</parameter>
			<parameter>
				<reference idref="map11Out" />
			</parameter>
		</exec>
	</foreach>
	<foreach name="map12">
