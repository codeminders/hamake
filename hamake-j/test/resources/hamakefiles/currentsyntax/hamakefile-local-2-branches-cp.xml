	<fold name="reduce1">
		<input>
			<file id="reduce1In" path="${tmpdir}/map21" />
		</input>
		<output>
			<file id="output1" path="${tmpdir}/output1.txt" />
		</output>
		<exec binary="${ls}">
			<parameter>
				<reference idref="reduce1In" />
			</parameter>
			<parameter>
				<literal value=">" />
			</parameter>
